#include <stdio.h>
#include <stdlib.h>

int utn_showMainMenu(int* pOption)
{
	int retorno = -1;
	int option;

	if(pOption != NULL)
	{
		if(utn_getNumberInt(&option, "***Menu de opciones***\n\n"
								  "1- Alta del cliente.\n"
								  "2- Modificar datos del cliente.\n"
								  "3- Baja del cliente.\n"
								  "4- Publicar aviso.\n"
								  "5- Pausar aviso.\n"
								  "6- Reanudar aviso.\n"
								  "7- Imprimir listado de clientes.\n"
								  "8- Informar.\n"
								  "9- Salir.\n\n"
								  "Ingrese la opcion: ", "Opcion ingresada invalida.\n", 1, OPTIONS, 2) == 0)
		{
			*pOption = option;
		}
	}
	return retorno;
}

