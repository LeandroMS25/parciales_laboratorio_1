#include <stdio.h>
#include <stdlib.h>
#include <string.h>
#include "Aviso.h"
#include "Cliente.h"
#include "validaciones.h"

#define QTY_CLI 100
#define QTY_AVI 1000
#define OPTIONS 10

int main(void)
{
	setbuf(stdout,NULL);
	Cliente listCliente[QTY_SCR];
	Aviso listAviso[QTY_CON];
	int opcion;

	scr_init(listCliente, QTY_SCR);
	con_init(listAviso, QTY_CON);
	do
	{
		utn_getNumberInt(&opcion, "***Menu de opciones***\n\n"
								  "1- Alta de pantalla.\n"
								  "2- Modificar datos de la pantalla.\n"
								  "3- Baja de pantalla.\n"
								  "4- Alta de Aviso.\n"
								  "5- Modificar Aviso.\n"
								  "6- Eliminar Aviso.\n"
								  "7- Consulta de facturacion\n"
				 	 	 	 	  "8- Imprimir listado de Avisoes.\n"
								  "9- Imprimir listado de pantallas.\n"
								  "10- Salir.\n\n"
								  "Ingrese la opcion: ", "Opcion ingresada invalida.\n", 1, OPTIONS, 2);
		switch (opcion)
		{
			case 1:
				if(scr_add(listCliente, QTY_SCR) == 0)
				{
					printf("La pantalla se cargo correctamente.\n");
				}
				break;
			case 2:
				if(scr_modify(listCliente, QTY_SCR) == 0)
				{
					printf("La pantalla se modifico correctamente.\n");
				}
				break;
			case 3:
				if(scr_remove(listCliente, QTY_SCR) == 0)
				{
					printf("La pantalla se borro correctamente.\n");
				}
				break;
			case 4:
				if(con_add(listAviso, QTY_CON, listCliente, QTY_SCR) == 0)
				{
					printf("La contratación fue realizada correctamente.\n");
				}
				break;
			case 5:
				if(con_modify(listAviso, QTY_CON, listCliente, QTY_SCR) == 0)
				{
					printf("La contratación fue modificada correctamente.\n");
				}
				break;
			case 6:
				if(con_remove(listAviso, QTY_CON, listCliente, QTY_SCR) == 0)
				{
					printf("La contratación fue elimanada correctamente.\n");
				}
				break;
			case 7:
				con_checkAmountToPay(listAviso, QTY_CON,listCliente, QTY_SCR);
				break;
			case 8:
				con_print(listAviso, QTY_CON,listCliente, QTY_SCR);
				break;
			case 9:
				scr_print(listCliente, QTY_SCR);
				break;
		}
	}while(opcion != OPTIONS);
}
